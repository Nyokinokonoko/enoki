---
import Layout from "../layouts/Layout.astro";
import { CATEGORIES } from "../lib/contentful";
---

<Layout
  title="RSS Feeds | notes.kinokonoko.io"
  description="Subscribe to RSS feeds for notes.kinokonoko.io blog posts"
>
  <main class="rss-page">
    <div class="container">
      <h1>RSS Feeds</h1>
      <p>Subscribe to get the latest posts from notes.kinokonoko.io</p>

      <div class="rss-feeds">
        <div class="rss-feed-item">
          <h2>All Posts</h2>
          <br />
          <a href="/rss.xml" class="rss-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
            Subscribe to All Posts
          </a>
        </div>

        {
          CATEGORIES.filter((cat) => cat.id !== "all").map((category) => (
            <div class="rss-feed-item">
              <h2>{category.label}</h2>
              <br />
              <a href={`/rss/${category.id}.xml`} class="rss-link">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M4 11a9 9 0 0 1 9 9" />
                  <path d="M4 4a16 16 0 0 1 16 16" />
                  <circle cx="5" cy="19" r="1" />
                </svg>
                Subscribe to {category.label}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>

<style>
  .rss-page {
    max-width: 48rem;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .container h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .container > p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .rss-feeds {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .rss-feed-item {
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    background-color: var(--card-bg);
  }

  .rss-feed-item h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .rss-feed-item p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .rss-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #f97316;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid #f97316;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .rss-link:hover {
    background-color: #f97316;
    color: white;
  }

  .rss-link svg {
    width: 16px;
    height: 16px;
  }

  .how-to-use {
    border-top: 1px solid var(--border);
    padding-top: 2rem;
  }

  .how-to-use h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .how-to-use p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .how-to-use ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .how-to-use li {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .how-to-use strong {
    color: var(--text);
  }
</style>

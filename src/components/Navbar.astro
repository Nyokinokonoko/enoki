let searchActive = false;

function toggleSearch() {
  searchActive = !searchActive;
  const navbar = document.querySelector(".navbar");
  const searchBar = navbar.querySelector(".search-bar");

  if (searchActive) {
    searchBar.style.display = "block";
  } else {
    searchBar.style.display = "none";
  }
}

let isMenuOpen = false;

function toggleMenu() {
  isMenuOpen = !isMenuOpen;
  const menu = document.querySelector<HTMLDivElement>(".navbar-links");
  if (menu) {
    menu.style.display = isMenuOpen ? "flex" : "none";
  }
}
---

<nav class="navbar">
  <div class="navbar-content">
    <div class="navbar-title">
      <span class="bold">notes.kinokonoko.io</span>
    </div>
    <button class="hamburger-menu" onclick="toggleMenu()">â˜°</button>
    <div class="navbar-links">
      <a href="/">Home</a>
      <a href="https://github.com/nyokinokonoko" target="_blank">GitHub</a>
      <a href="https://twitter.com/nyokinokonoko" target="_blank"
        >X (formerly Twitter)</a
      >
    </div>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background-color: #1e1e1e; /* Dark background */
    color: #ffffff; /* Light text for contrast */
    border-radius: 50px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 80%; /* Set navbar width to 80% */
    margin-top: 2rem; /* Add space below the top of the page */
    margin-left: auto;
    margin-right: auto;
  }

  .navbar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
  }

  .navbar-title {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .navbar-links {
    display: flex; /* Ensure nav items are visible on non-mobile devices */
  }

  .navbar-links a {
    margin: 0 1rem;
    text-decoration: none;
    color: #ffffff; /* Light text for links */
    font-weight: 500;
  }

  .navbar-links a:hover {
    color: #00bcd4; /* Accent color for hover */
  }

  .hamburger-menu {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .navbar-content {
      flex-direction: row; /* Arrange items in a row */
      justify-content: space-between; /* Space out the title and hamburger icon */
      align-items: center; /* Center align items vertically */
      width: 100%; /* Ensure it spans the full width */
    }

    .navbar-title {
      flex-grow: 1; /* Allow the title to take up available space */
      text-align: left; /* Align the title to the left */
      font-size: 1.2rem; /* Reduce font size for mobile devices */
    }

    .navbar-links {
      display: none; /* Default to hidden on mobile */
      flex-direction: column;
      align-items: flex-start;
      background-color: #1e1e1e;
      padding: 1rem;
      border-radius: 10px;
      position: absolute;
      top: 100%;
      right: 0;
      width: 200px;
      z-index: 1000; /* Ensure it appears above other elements */
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow for better visibility */
    }

    .navbar {
      position: relative; /* Ensure the navbar is the reference for absolute positioning */
    }

    .navbar-links a {
      margin: 0.5rem 0;
    }

    .hamburger-menu {
      display: block;
      margin-left: auto; /* Push the hamburger icon to the right */
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburgerMenu = document.querySelector(".hamburger-menu");
    const navbarLinks = document.querySelector(".navbar-links");

    hamburgerMenu.addEventListener("click", () => {
      const isMenuOpen = navbarLinks.style.display === "flex";
      navbarLinks.style.display = isMenuOpen ? "none" : "flex";
    });
  });
</script>
